@model FantasyBurgers.Models.Dessert

@{
    ViewBag.Title = "Dessert Details";
}
    <div style="margin-top: 165px;">
        <h2>Dessert Details</h2>

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.DessertName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DessertName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DessertLongDescription)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DessertLongDescription)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DessertPrice)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DessertPrice)
                </dd>

                <dd>
                    <img src="@Url.Content(Model.DessertImage)" class="img-rounded detailsimages" />
                </dd>
            </dl>
        </div>
        <p>
            @if (HttpContext.Current.User.IsInRole("Admin"))
            {
                @Html.ActionLink("Back to List", "Admin", null, new { @class = "btn btn-primary" })
            }
            else
            {
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
            }
        </p>
    </div>