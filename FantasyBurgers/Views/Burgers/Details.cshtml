@model FantasyBurgers.Models.Burger

@{
    ViewBag.Title = "Details";
}
<div style="margin-top:165px;">
    <h4>Burger Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BurgerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BurgerName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BurgerLongDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BurgerLongDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BurgerPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BurgerPrice)
        </dd>

        <dd>
            <img class="detailsimages img-rounded" src="@Url.Content(Model.BurgerImage)" />
        </dd>

    </dl>
</div>
<p>
    @if (HttpContext.Current.User.IsInRole("Admin"))
    {
        @Html.ActionLink("Back to List", "Admin", null, new { @class = "btn btn-primary btn-lg" })
    }
    else
    {
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-lg" })
    }
</p>
