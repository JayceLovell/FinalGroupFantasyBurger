@model IEnumerable<FantasyBurgers.Models.Appetizer>

@{
    ViewBag.Title = "Admin Appetizer";
}
<div style="margin-top: 165px;">
    <p>
        @Html.ActionLink("Create New Appetizer", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppetizerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppetizerShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppetizerPrice)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AppetizerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppetizerShortDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppetizerPrice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AppetizerId }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AppetizerId }, new { @class = "btn btn-success btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AppetizerId }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
</div>
